# Attributes
[attr]txt      text eol=lf
[attr]bin      filter=lfs diff=lfs merge=lfs -text binary

# All wildcard
*              text=auto

# Git
.gitattributes txt export-ignore
.gitignore     txt export-ignore
.gitkeep       txt export-ignore

# Generic
*.json         txt diff=json
*.md           txt diff=markdown
*.txt          txt
*.cfg          txt diff=ini
*.csv          txt diff=csv
*.ini          txt diff=ini
*.log          txt

# Backups and templates
*.backup       txt export-ignore
*.bak          txt export-ignore
*.bkp          txt export-ignore
*.dist         txt export-ignore

### Binary

# Images
*.aseprite     bin
*.kra          bin
*.png          bin
*.raw          bin
*.svg          bin
*.webp         bin
*.xcf          bin

# Fonts
*.otf          bin
*.ttf          bin

# Audio
*.ogg          bin
*.wav          bin

# 3D
*.blend        bin
*.dae          bin
*.fbx          bin
*.glb          bin
*.gltf         bin
